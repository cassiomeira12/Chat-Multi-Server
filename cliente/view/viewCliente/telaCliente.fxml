<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="500.0" prefWidth="650.0" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox fx:id="servidorBox" alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="20.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="IP / DNS Servidor" textFill="#909090">
                           <font>
                              <Font size="15.0" />
                           </font>
                        </Label>
                        <TextField fx:id="ipServidorText" alignment="CENTER" prefHeight="26.0" prefWidth="210.0" text="127.0.0.1" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Porta Servidor TCP" textFill="#909090">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="portaServerTCPText" alignment="CENTER" prefWidth="100.0" text="1604" />
                              <Button fx:id="conectarButton" mnemonicParsing="false" prefWidth="100.0" text="Conectar" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="56.0" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Porta Servidor UDP" textFill="#909090">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="portaServerUDPText" alignment="CENTER" prefWidth="100.0" text="1605" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="102.0" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Label text="Porta Cliente UDP" textFill="#909090">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="portaClienteUDPText" alignment="CENTER" prefWidth="100.0" text="1606" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <StackPane fx:id="conexaoStackPane">
               <children>
                  <Label fx:id="statusClienteLabel" text="Cliente Desconectado" textFill="#c61e1e">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
         </children>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <AnchorPane fx:id="salaPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <HBox layoutX="22.0" layoutY="174.0" spacing="20.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nova Sala" />
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="novaSalaText" />
                              <Button fx:id="criarButton" mnemonicParsing="false" onAction="#criarSala" text="Criar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <StackPane fx:id="salaStack" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="100.0" />
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Entrar Sala" />
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="entrarSalaText" />
                              <Button fx:id="entrarButton" mnemonicParsing="false" onAction="#entrarSala" text="Entrar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox layoutX="69.0" layoutY="48.0" spacing="20.0">
               <children>
                  <Label text="Conecte em um Servidor">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label text="Crie Salas de Bate-Papo ou Conecte em um ja existente">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</fx:root>
